<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Main Suite">
    <test name = "Groups Tests">
        <groups>
            <define name="Group 1">
                <include name="smoke"/>
            </define>
            <define name="Group 2">
                <include name="regression"></include>
            </define>
            <define name="Group 3">
                <include name="smoke"/>
                <include name="regression"/>
            </define>
            <define name="Group Homework">
                <include name="smokeHomework"/>
                <include name="regressionHomework"/>
            </define>
            <run>
                <include name="Group Homework"></include>
            </run>
        </groups>
        <classes>
            <class name="tests.GroupsTest"></class>
            <class name="tests.HomeworkTest"></class>
        </classes>
    </test>
</suite>